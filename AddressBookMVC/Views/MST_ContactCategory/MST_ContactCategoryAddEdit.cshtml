@{
    ViewData["Title"] = "ContactCategory Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@model MST_ContactCategoryModel


<style>
    .btn.btn-a {
        text-decoration: none;
        background-color: #000000;
        color: #ffffff;
    }

        .btn.btn-a:hover {
            background-color: #2eca6a;
            color: #000000;
        }

    .btn.btn-b {
        text-decoration: none;
        background-color: #000000;
        color: #ffffff;
    }

        .btn.btn-b:hover {
            background-color: rgba(255,0,0, 1);
            color: #ffffff;
        }
</style>

<section class="intro-single">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="title-single-box">
                    <h1 class="title-single">ContactCategory Add Edit</h1>
                </div>
            </div>
            <div class="col-md-12 col-lg-4">
                <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" asp-controller="MST_ContactCategory"><i class="fa-regular fa-address-book"></i> ContactCategory List</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            ContactCategory Add Edit
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
        <hr />
        <br />
        <br />
    </div>


    <div class="container">
        <h5 style="color:green"><label>@TempData["ContactCategoryInsertMessage"]</label></h5>
        <br />
        <form method="post" asp-controller="MST_ContactCategory" asp-action="Save">
            @Html.HiddenFor(x=>x.ContactCategoryID)
            <div class="row">

                <div class="col-md-2">
                    <span style="color: #ff0000">*</span>
                    ContactCategory Name :-
                </div>
                <div class="col-md-3">
                    <input type="text" placeholder="Enter Contact Category Name" asp-for="ContactCategoryName" class="form-control" />
                    <span asp-validation-for="ContactCategoryName" class="text-danger"></span>
                </div>
                <div class="col-md-1">
                </div>
                
            </div>
           
            <br />
            <div class="row">
                <div class="col-md-5">
                </div>
                <div class="col-md-1">
                    <input type="submit" value="Save" class="btn btn-a" />
                </div>
                
                <div class="col-md-1">
                    <a class="btn btn-b" asp-action="Index" asp-controller="MST_ContactCategory">
                        Cancel
                    </a>
                </div>
            </div>
        </form>

    </div>
</section><!-- End Intro Single-->